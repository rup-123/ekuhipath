<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- Background color for disabled state -->
            <solid android:color="#CCCCCC" /> <!-- Light grey color -->
            <!-- Border color and width for disabled state -->
            <stroke android:color="#AAAAAA" android:width="2dp" />
            <!-- Rounded corners for disabled state -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color for default state -->
            <solid android:color="@color/colorPrimaryDark" /> <!-- Your button's default background color -->
            <!-- Rounded corners for default state -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
